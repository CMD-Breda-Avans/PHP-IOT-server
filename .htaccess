RewriteEngine On

# Route /get/abc123 requests to iot/index.php with appropriate parameters
RewriteRule ^get/([^/]+)/?$ /iot/index.php?mode=get&token=$1 [QSA,L]

# Route /send/abc123/helloworld requests to iot/index.php with appropriate parameters
RewriteRule ^send/([^/]+)/([^/]+)/?$ /iot/index.php?mode=send&token=$1&value=$2 [QSA,L]